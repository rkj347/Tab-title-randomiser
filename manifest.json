{
  "manifest_version": 3,
  "name": "Tab Title Randomiser",
  "version": "1.0",
  "description": "Quickly hide or professionalize your browser tabs for screen sharing.",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "data/domain_mappings.json" ],
      "matches": [ "<all_urls>" ]
    }
  ]
} 